<% title "Contact & Inquiry", false %>

<div class="content">
  <div id="feedback">
    <h2 class="bar">I want to hear from you...</h2>
    <%= form_for @feedback_message do |f| %>
      <%= f.error_messages %>
      <div class="info">
        <h3>I offer FREE appraisals of any Marklin toy, train, or entire collection.  Please contact me!</h3>
        <p>You can send me an email to <%= link_to "marklinstop@gmail.com", "mailto:marklinstop@gmail.com" %> or use the form below.</p>
      </div>
      <div class="special_email_field">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", :autocomplete => "off" %>
        (do not fill)
      </div>
      <div class="field">
        <%= f.label :name, "Your Name" %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email, "Your Email Address" %>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :content, "Message" %>
        <%= f.text_area :content, :rows => 14, :cols => 50 %>
      </div>
      <div class="actions"><%= f.submit "Send Feedback" %></div>
    <% end %>
  </div>
  <div id="feedback_instructions">
    <p><strong>Please contact me about:</strong></p>
    <ul>
      <li>A Marklin toy you want to know more about</li>
      <li>Marklin toys you want to buy or sell</li>    
      <li>Problems with existing episodes</li>
      <li>Ideas for future episodes</li>
      <li>Anything about this site</li>
    </ul>    
  </div>
</div>
